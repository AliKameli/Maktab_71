@model EmployeeSaveDTO
<h3>اضافه کردن کارکنان</h3>
<form>

	<div class="form-group">
		<label asp-for="Name"></label>
		<input class="form-control" asp-for="Name">
	</div>

	<div class="form-group">
		<label asp-for="Family"></label>
		<input class="form-control" asp-for="Family">
	</div>   
	
	<div class="form-group">
		<label asp-for="Age"></label>
		<input class="form-control" asp-for="Age">
	</div> 
	
	<div class="form-group">
		<label asp-for="Mobile"></label>
		<input class="form-control" asp-for="Mobile">
	</div>  
	
	<div class="form-group">
		<label asp-for="NationalCode"></label>
		<input class="form-control" asp-for="NationalCode">
	</div>
	<div style="float:left; margin-top:5px;">
	<button type="submit" class="btn btn-primary" asp-action="Add" formmethod="post">ایجاد</button>
	<button type="submit" class="btn btn-danger" asp-action="List">انصراف</button>
	</div>

</form>